<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.commit.collaboration_board_server.mapper.UserMapper">

    <select id="findUsers" parameterType="Long">
        SELECT *
        FROM USER
        <where>
            <if test="userNo != null">
                userNo = #{userNo}
            </if>
        </where>
    </select>

    <insert id="insertUser" parameterType="com.commit.collaboration_board_server.dto.request.UserCreateRequest">
        INSERT INTO USER
                (userId,
                userName,
                password,
                isAdmin)
        VALUES
                (#{userId},
                #{userName},
                #{password},
                #{isAdmin})
    </insert>

    <update id="updateUser" parameterType="com.commit.collaboration_board_server.model.User">
        UPDATE USER
        SET    userid = # {userId},
               username = # {userName},
               password = # {password},
               phone_number = # {phoneNumber},
               email = # {email},
               role = # {role}
        WHERE  userNo = # {userNo}
    </update>


    <delete id="deleteUser" parameterType="Long">
        DELETE FROM USER
        WHERE  userNo = #{userNo}
    </delete>

    <select id="findByUserId" parameterType="Long" resultType="com.commit.collaboration_board_server.model.User">
        SELECT *
        FROM USER
        WHERE userNo = #{userNo}
    </select>
</mapper>
